<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- ChangeSet 2: Create employees table inside payroll -->
    <changeSet id="2" author="test">
        <createTable catalogName="payroll" tableName="employees">
            <column name="employee_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="department" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet 3: Add 'project' column -->
    <changeSet id="3" author="test">
        <addColumn catalogName="payroll" tableName="employees">
            <column name="project" type="VARCHAR(50)"/>
        </addColumn>
    </changeSet>
    
</databaseChangeLog>
